<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/black"
              android:alpha="0.5">

    <RelativeLayout
            android:id="@+id/relative_history"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp">

        <TextView
                android:id="@+id/text_history"
                android:textColor="@color/text_color"
                android:textSize="14sp"
                android:text="历史记录"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <GridView
                android:id="@+id/grid_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_history"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:numColumns="3"
                android:horizontalSpacing="5dp"
                android:verticalSpacing="5dp"
                android:listSelector="@android:color/transparent"
                android:background="@android:color/transparent"
                android:scrollbars="none"
                android:gravity="center"
                android:stretchMode="columnWidth"/>

    </RelativeLayout>

    <View
        android:background="#e0e9e7"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <GridView
                android:id="@+id/grid_choose"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/text_history1"
                android:numColumns="3"
                android:horizontalSpacing="5dp"
                android:verticalSpacing="5dp"
                android:listSelector="@android:color/transparent"
                android:background="@color/bg_gray1"
                android:scrollbars="none"
                android:gravity="center"
                android:padding="10dp"
                android:stretchMode="columnWidth"/>

        <View
                android:background="#e0e9e7"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

        <View
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="15dp"/>

    </LinearLayout>

</LinearLayout>