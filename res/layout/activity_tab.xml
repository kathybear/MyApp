<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">

    <FrameLayout
            android:id="@+id/fl_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/linear_tab"
            android:layout_alignParentTop="true"/>

    <ImageView
            android:id="@+id/image" android:layout_width="50dp" android:layout_height="50dp"
    android:src="@drawable/selector_bg_blue_red"/>

    <LinearLayout
            android:id="@+id/linear_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="@color/hard_hard_hard_hard_gray">

    </LinearLayout>

</RelativeLayout>